# Auto-detect text files and normalize line endings
* text=auto

# Force Unix line endings for source files
*.py text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.h text eol=lf
*.sh text eol=lf
*.md text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Force Windows line endings for Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.msh binary
*.h5 binary
*.hdf5 binary
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.tar.gz binary
*.zip binary
